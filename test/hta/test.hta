<html>
<head>
<title>test</title>
</head>
<body>
<p><form name="form1"></p>
<p><input type="file" name="test_file"></p>
<p><input type="button" name="test_button" value="a" onClick="test()"></p>
<p><textarea name="output" cols="80" rows="4"></textarea></p>
</form>
<script language="JScript">
function test(){
  var objFSO = new ActiveXObject( "Scripting.FileSystemObject" );
  document.form1.output.value = document.form1.test_file.value + "\r\n";
  var f_stream = objFSO.OpenTextFile( document.form1.test_file.value );
  var a = f_stream.ReadAll();
  f_stream.Close();
  
  document.form1.output.value += a + "\r\n";
}
</script>
</body>
</html>
